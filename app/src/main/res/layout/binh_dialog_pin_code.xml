<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="730dp"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Nhập mã pin"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/pin_code_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/pin_code_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/binh_view_circle_pin_code"
            android:text="1" />

        <View
            android:id="@+id/pin_code_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/binh_view_circle_pin_code"
            android:text="2" />

        <View
            android:id="@+id/pin_code_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/binh_view_circle_pin_code"
            android:text="3" />

        <View
            android:id="@+id/pin_code_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/binh_view_circle_pin_code"
            android:text="4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/binh_button_pin_code"
            android:text="1"
            android:textColor="@color/black"
            tools:backgroundTint="#79CAD5" />


        <Button
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/binh_button_pin_code"
            android:text="2"
            android:textColor="@color/black"
            tools:backgroundTint="#79CAD5" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/binh_button_pin_code"
            android:text="3"
            android:textColor="@color/black"
            tools:backgroundTint="#79CAD5" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/binh_button_pin_code"
            android:text="4"
            android:textColor="@color/black"
            tools:backgroundTint="#79CAD5" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/binh_button_pin_code"
            android:text="5"
            android:textColor="@color/black"
            tools:backgroundTint="#79CAD5" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/binh_button_pin_code"
            android:text="6"
            android:textColor="@color/black"
            tools:backgroundTint="#79CAD5" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/binh_button_pin_code"
            android:text="7"
            android:textColor="@color/black"
            tools:backgroundTint="#79CAD5" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/binh_button_pin_code"
            android:text="8"
            android:textColor="@color/black"
            tools:backgroundTint="#79CAD5" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/binh_button_pin_code"
            android:text="9"
            android:textColor="@color/black"
            tools:backgroundTint="#79CAD5" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_clear_all"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/binh_button_pin_code"
            android:text="Hủy"
            android:textColor="@color/black"
            tools:backgroundTint="#79CAD5" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/binh_button_pin_code"
            android:text="0"
            android:textColor="@color/black"
            tools:backgroundTint="#79CAD5" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/binh_button_pin_code"
            android:text="X"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:backgroundTint="#79CAD5"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>
</LinearLayout>